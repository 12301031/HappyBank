<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/depositbackground">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/toptextbg"
        android:text="返回"
        android:gravity="center" />

    <TextView
        android:id="@+id/textSub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonBack"
        android:layout_below="@+id/textSubTitle"
        android:layout_marginTop="16dp"
        android:text="存款名称" 
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonBack"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="幸福银行"
        android:textSize="20dp"
        android:background="@drawable/title" />

    <TextView
        android:id="@+id/textSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="存款信息"
        android:gravity="center" 
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textSub1"
        android:layout_alignBottom="@+id/textSub1"
        android:layout_centerHorizontal="true"
        android:text="存款记录001" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textView1"
        android:text="☆☆☆☆☆☆" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSub3"
        android:layout_centerVertical="true"
        android:text="存款日期"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textSub3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_alignLeft="@+id/textView7"
        android:layout_marginBottom="21dp"
        android:text="存款额度"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSub1"
        android:layout_below="@+id/textSub1"
        android:layout_marginTop="22dp"
        android:text="心情等级"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_alignLeft="@+id/textView3"
        android:text="2015年4月30日" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="37dp"
        android:text="全部存款内容"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textSub3"
        android:layout_alignBottom="@+id/textSub3"
        android:layout_alignLeft="@+id/textView2"
        android:text="10天" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/TextView02"
        android:background="@drawable/largeblankrecord"
        android:text="" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="14dp"
        android:background="@drawable/toptextbg"
        android:gravity="center"
        android:text="取款" />

</RelativeLayout>