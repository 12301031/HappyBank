<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/depositbackground">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/toptextbg"
        android:text="返回"
        android:gravity="center" />

    <TextView
        android:id="@+id/textSub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonBack"
        android:layout_below="@+id/textSubTitle"
        android:layout_marginTop="16dp"
        android:text="存款名称" 
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSub1"
        android:layout_below="@+id/textSub1"
        android:layout_marginTop="18dp"
        android:text="心情等级" 
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textSub3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="22dp"
        android:text="全部存款内容" 
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonBack"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="幸福银行"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="新建存款"
        android:gravity="center" 
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/editText1"
        android:background="@drawable/inputblank"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/textSub1"
        android:layout_toRightOf="@+id/textSub3"
        android:background="@drawable/inputblank"
        android:ems="10" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/textSub3"
        android:layout_below="@+id/textSub3"
        android:layout_marginTop="18dp"
        android:background="@drawable/Largeblank"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/textView7"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="24dp"
        android:background="@drawable/toptextbg"
        android:gravity="center"
        android:text="保存" />

</RelativeLayout>